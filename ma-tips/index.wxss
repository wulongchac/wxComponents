.tips{
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    justify-content: center;
    align-items: center;
}
.tips-show{
    display: flex;
}
.tips-in{
    background:rgba(32,32,32,0.8);
    color:#FBFBFB;
    font-size:28rpx;
    padding: 0 40rpx;
    height:60rpx;
    line-height:60rpx;
    text-align:center;
    border-radius:10rpx;
}